{% extends "base.html.twig" %}

{% block body %}    

<div class="container">
   
    <nav class="navbar navbar-ligh my-5">
        <a class="text-primary font-weight-light nav-link" href="{{ path("showVehiculos", {id: app.user.id}) }}"><i class="mr-3 fas fa-long-arrow-alt-left"></i>Volver</a>
    </nav>
    <h5 class="text-primary nav-link text-center my-3">As√≠ luce tu coche</h5> 
    <div class="container my-5">
        <div class="card">
            <img src="{{vehiculo.image}}" class="card-img-top">
            <div class="card-body">
                <h3 class="card-title">{{vehiculo.matricula}}</h3>
                <h4 class="card-text">{{vehiculo.marca}}</h4>
                <h5 class="card-text">{{vehiculo.modelo}}</h5>
                <p class="card-text">{{vehiculo.year}}</p>
        
                <a href="{{ path("deleteVehiculo", {id: vehiculo.id}) }}" class="btn btn-primary">Borrar</a>
                <a href="{{ path("editVehiculo", {id: vehiculo.id}) }}" class="btn btn-primary">Editar</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}